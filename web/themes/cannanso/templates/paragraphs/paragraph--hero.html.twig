{% if paragraph.field_background_image.0 is not empty %}
  {# {% set bg_gradient = '280deg, #dae1e8 -35%, #00204000 45%' %} #}
  {% set bg_url = file_url(paragraph.field_background_image.entity.field_media_image.entity.fileuri) %}
{% endif %}

  <section id="intro" role="main" style="background-image: url({{ bg_url }}); background-position-y: {{ content.field_bg_image_position }};">
    <div class="container">
      <div class="intro-unit">
        <a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}
        {% if content.field_label is not empty %}
        <p>{{ content.field_label }}</p>
        {% endif %}
        <h1 class="lead">{{ content.field_description }}</h1>
        {% if content.field_cta.0 is not empty %}
        <a class="btn more" href="{{ content.field_cta.0['#url'] }}">{{ content.field_cta.0['#title'] }} {{ content.field_cta_icon }}</a>
        {% endif %}
      </div>
    </div>
  </section>
