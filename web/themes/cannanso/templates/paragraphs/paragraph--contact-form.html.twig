<section id="contact" class="{{ content.field_background_color[0]['#markup'] }}">
    <div class="container">
        <h2 class="text-center">{{ content.field_title }}</h2>
        <div class="row">
            <div class="col-md-4 col-xs-12">
                <h3>{{ 'Locate'|t }}</h3>
                <div class="location">
                    {{ content.field_contact_location }}
                </div>
                <h3>{{ 'Connect'|t }}</h3>
                {{ content.field_connect_menu }}
            </div>
            <div class="col-md-8 col-xs-12">
                <h3>{{ 'Communicate'|t }}</h3>
                {{ content.field_communicate_block }}
            </div>
        </div>
    </div>
</section>